<thead>
    <tr>
        <th>Email</th>
        <th>Last Login IP Address</th>
        <th>Last Login Time</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Status</th>
        <th>Delete</th>
        <th colspan="10"></th>
    </tr>
</thead>
<tbody id="accounts-data">
    <% if @users %>
        <% @users.each do |user| %>
	  <tr>
	    <td><%= user.email %></td>
            <td><%= user.last_sign_in_ip%></td>
            <td><%= user.last_sign_in_at%></td>
	    <td><%= user.created_at %></td>
	    <td><%= user.updated_at %></td>
            <% if user.account_frozen %>
              <td><%= link_to 'Unfreeze', accountmanagement_unfreezeaccount_path(:id => user.id), 
                    method: :unfreeze, data: { confirm: 'Are you sure?' } %></td>
            <% else %>
              <td><%= link_to 'Freeze', accountmanagement_freezeaccount_path(:id => user.id), 
                    method: :freeze, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
	    <td><%= link_to 'Delete', accountmanagement_deleteaccount_path(:id => user.id),
		    method: :delete, data: { confirm: 'Are you sure?' } %></td>
	   </tr>
      <% end %>
    <% end %>
</tbody>

