<%= stylesheet_link_tag "bootstrap" %>
<%= stylesheet_link_tag "signin" %>

<div class="container">
  <h1>Account Management</h1>
  <%= link_to "Home", root_path %>
  <br><br>
  <div class="row">
    <div class="col-md-3">
      <div class="panel panel-default">
	<div class="panel-heading">
          <h3><%= link_to 'Change Password', {:controller => 'accountmanagement', :action => 'updatepassword'} %></h3>
        </div>
        <div class="panel-body">
          Click here to change your password.
        </div>
      </div>
    </div>
    <% if current_user.try(:admin?) %>
      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3><%= link_to 'User Accounts', {:controller => 'accountmanagement', :action => 'accounts'} %></h3>
          </div>
          <div class="panel-body">
            Click here to view and manage user accounts.
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>
