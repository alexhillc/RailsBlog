<%= stylesheet_link_tag "bootstrap" %>
<%= stylesheet_link_tag "signin" %>

<%= render 'modals' %>

<div class="form-signin">
  <div class="row">
    <%= link_to "Home", root_path %>
  </div>
  <div class="row">
    <%= link_to "Families", families_path %>
  </div>
  <h2 class="row form-signin-heading">Edit Family</h2>

  <%= form_for @family, :html => {:class => "form-signin hidden", :id => "form_family"} do |f| %>
        <%= f.hidden_field :user_id, :value => @family.user_id %>
        <%= f.label :user %>
        <%= f.text_field :username, :value => User.find(@family.user_id).email, :readonly => true, :class => 'form-control', :id => 'username' %>
        <%= f.label :password %>
        <%= f.password_field :password, :class => 'form-control', :id => 'password' %>
        <%= label_tag :name %>
        <%= text_field_tag :name, nil, :class => 'form-control' %>
        <%= f.hidden_field :encrypted_name, :value => @family.encrypted_name, :id => 'encrypted_name' %>
        </br>
        </br>
        <%= f.submit "Update Family", :class => 'btn btn-primary' %>
  <% end %>
</div>
<script>
$(document).ready(function() {
    $('#decModalFamilyEdit').modal('show');
} );
</script>

<%= javascript_include_tag "families" %>
