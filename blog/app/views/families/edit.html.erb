<%= stylesheet_link_tag "bootstrap" %>
<%= stylesheet_link_tag "signin" %>

<%= form_for @family, :html => {:class => "form-signin"} do |f| %>
        <%= link_to "Back", :back %>
        <h2 class="form-signin-heading">Edit Scenario</h2>
        <%= f.hidden_field :user_id, :value => @family.user_id %>
        <%= f.label :user %>
        <%= f.text_field :username, :value => User.find(@family.user_id).email, :readonly => true, :class => 'form-control' %>
        <%= f.label :name %>
        <%= f.text_field :name, :value => @family.name, :class => 'form-control' %>
        </br>
        </br>
        <%= f.submit "Update Family", :class => 'btn btn-primary' %>
<% end %>
