<%= stylesheet_link_tag "bootstrap" %>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.6/css/jquery.dataTables.css"> 
<script src="https://cdn.datatables.net/1.10.6/js/jquery.dataTables.min.js"></script>
<!DOCTYPE HTML>
<div class="container">
  <div class="row">
    <h1>Manage Families</h1>
  </div>
  <div class="row">
    <%= link_to 'Create a new family', { :controller => 'families', :action => 'new' } %><br><br>
  </div>
  <div class="row">
    <p>Current user: <%= current_user.email %></p>
  </div>
  <div class="row">
    <table id="families_table" class="table table-hover">
      <%= render :partial => "families_table" %>
    </table>
  </div>
</div>

<script>
$(document).ready(function() {
    $('#families_table').DataTable();
} );
</script>
