<%= stylesheet_link_tag "bootstrap" %>
<%= stylesheet_link_tag "signin" %>

<%= form_tag password_resets_path, :method => :post, :class => 'form-signin' do %>
	<h2 class='form-signin-heading'>Reset Password</h2>
	<div class="field">
		<%= label_tag :email %>
		<%= text_field_tag :email, params[:email], :class => 'form-control' %>
	</div>
	<br>
	<div class="actions"><%= submit_tag "Reset Password", :class => 'btn btn-primary' %></div>
<% end %>