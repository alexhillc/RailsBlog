<thead>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Edit</th>
        <th>Delete</th>
        <th colspan="10"></th>
    </tr>
</thead>
<tbody id="scenarios-data">
    <% if @scenarios %>
        <% @scenarios.each do |scenario| %>
	  <tr>
	    <td><%= scenario.title %></td>
	    <td><%= scenario.description %></td>
	    <td><%= scenario.created_at %></td>
	    <td><%= scenario.updated_at %></td>
	    <td><%= link_to 'Edit', edit_scenario_path(scenario) %></td>
	    <td><%= link_to 'Delete', scenario_path(scenario),
		    method: :delete, data: { confirm: 'Are you sure?' } %></td>
	   </tr>
      <% end %>
    <% end %>
</tbody>

