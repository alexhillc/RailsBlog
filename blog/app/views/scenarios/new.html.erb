<%= stylesheet_link_tag "bootstrap" %>
<%= stylesheet_link_tag "signin" %>

<%= form_for Scenario.new, :html => {:class => "form-signin"} do |f| %>
        <%= link_to "Back", :back %>
        <h2 class="form-signin-heading">New Scenario</h2>
        <%= f.label :family %>
        <%= f.collection_select :family_id, Family.where(:user_id => current_user.id), :id, :encrypted_name, { prompt: 'Select a family...' }, { class: 'form-control' }  %>
        <%= f.label :title %>
        <%= f.text_field :title, :class => 'form-control' %>
        <%= f.label :description %>
        <%= f.text_field :description, :class => 'form-control' %>
        </br>
        </br>
        <%= f.submit "Create Scenario", :class => 'btn btn-primary' %>
<% end %>
